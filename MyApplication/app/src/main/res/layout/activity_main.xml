<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image4"
    tools:context=".MainActivity">

 <!-- <com.rey.material.widget.FloatingActionButton

      android:layout_height="50dp"
      android:layout_width="50dp"
      tools:fab_backgroundColor="#ffffffff"
      />-->

    <RelativeLayout
        android:layout_width="220dp"
        android:layout_height="400dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            />
        <ImageView
            android:id="@+id/img2"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_toRightOf="@id/img1"
            />
        <TextView
            android:id="@+id/txt1"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@id/img2"
            android:textSize="17sp"
            android:gravity="center"
            android:textColor="@color/black"
            />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:layout_below="@+id/img1"
            />
        <ImageView
            android:id="@+id/img4"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/img1"
            android:layout_toRightOf="@id/img1"
            />
        <TextView
            android:id="@+id/txt2"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/img1"
            android:layout_toRightOf="@id/img2"
            android:textSize="17sp"
            android:gravity="center"
            android:textColor="@color/black"
            />

        <ImageView
            android:id="@+id/img5"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/img3"
            />
        <ImageView
            android:id="@+id/img6"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/img3"
            android:layout_toRightOf="@id/img1"
            />
        <TextView
            android:id="@+id/txt3"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/img3"
            android:layout_toRightOf="@id/img2"
            android:textSize="17sp"
            android:gravity="center"
            android:textColor="@color/black"
            />

        <ImageView
            android:id="@+id/img7"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/img5"
            />
        <ImageView
            android:id="@+id/img8"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/img5"
            android:layout_toRightOf="@id/img1"
            />
        <TextView
            android:id="@+id/txt4"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/img5"
            android:layout_toRightOf="@id/img2"
            android:textSize="17sp"
            android:gravity="center"
            android:textColor="@color/black"
            />

        <ImageView
            android:id="@+id/img9"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/img7"
            />
        <ImageView
            android:id="@+id/img10"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/img7"
            android:layout_toRightOf="@id/img1"
            />
        <TextView
            android:id="@+id/txt5"
            android:layout_width="70dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@id/img2"
            android:layout_below="@+id/img7"
            android:textSize="17sp"
            android:gravity="center"
            android:textColor="@color/black"
            />
    </RelativeLayout>


    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="220dp"
        android:layout_height="340dp"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp">
        <View
            android:id="@+id/view_1"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:background="@drawable/dotted_line_vertical"
            android:layerType="software" />
        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="당첨확률\n\n\n5 억원 : 0.00002%\n2천만원 : 0.001%\n10만원 : 0.1%\n5 천원 : 2.5%\n1 천원 : 20%"
            />

        <!-- scratch view -->
        <com.clock.scratch.ScratchView
            android:id="@+id/scratch_vie"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
           />
    </FrameLayout>
    <ImageView
        android:id="@+id/imagebtn"
        android:layout_width="80dp"
        android:layout_height="79dp"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/frame"
        android:src="@drawable/reset"
        android:clickable="true"
        />
    <ImageView
        android:id="@+id/i_1000"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/frame"
        android:src="@drawable/i_1000"
        android:clickable="true"
        />

    <ImageView
        android:id="@+id/imagebtn1"
        android:layout_width="75dp"
        android:layout_height="72dp"
        android:layout_marginLeft="135dp"
        android:layout_marginTop="45dp"
        android:clickable="true"
        android:src="@drawable/info" />
    <ImageView
        android:id="@+id/imagebtn2"
        android:layout_width="113dp"
        android:layout_height="130dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="-20dp"
        android:layout_below="@+id/frame"
        android:src="@drawable/rank"
        android:clickable="true"
        />
</RelativeLayout>